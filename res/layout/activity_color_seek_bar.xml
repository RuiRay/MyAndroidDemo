<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ColorSeekBarActivity" >

    <com.ionesmile.variousdemo.view.ColorSeekBarView
        android:id="@+id/csv_colorful"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:seekBarType="colorful" />

    <com.ionesmile.variousdemo.view.ColorSeekBarView
        android:id="@+id/csv_white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:seekBarType="white" />

    <com.ionesmile.variousdemo.view.ColorSeekBarView
        android:id="@+id/csv_bright"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:seekBarType="bright" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    
    <CheckBox 
        android:id="@+id/checkbox_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Switch"
        />

</LinearLayout>